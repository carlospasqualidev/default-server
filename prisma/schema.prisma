//#region CONFIG
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//#endregion

//#region TOKENS
model tokens {
  id        String   @id @unique @default(nanoid(12))
  token     String   @unique
  hasUsed   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//#endregion

//#region PERMISSIONS
model permissions {
  id        String   @id @unique @default(nanoid(12))
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users          usersPermissions[]
  subPermissions subPermissions[]
}

model subPermissions {
  id        String   @id @unique @default(nanoid(12))
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  permissionsId String
  permissions   permissions @relation(fields: [permissionsId], references: [id])
}

//#endregion

//#region USERS
model users {
  id         String    @id @unique @default(nanoid(12))
  name       String
  email      String    @unique
  image      String?
  customUrl  String?
  isBlocked  Boolean   @default(false)
  password   String
  lastAccess DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  permissions usersPermissions[]
}

model usersPermissions {
  id           String @id @unique @default(nanoid(12))
  permissionId String
  userId       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  permission permissions @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  user       users       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

//#endregion
